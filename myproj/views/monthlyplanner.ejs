<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Setup Monthly Plan</title>
    <link rel="stylesheet" href="/stylesheets/monthlyplanner.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="sidebar">
        <h2 class="header-title">piggyBank</h2>
        <ul>
            <li><a href="/expenses">Home</a></li>
            <li><a href="/budget">Budget</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/monthlyplanner" class="active">Monthly Planner</a></li>
            <li><a href="/transaction">Leaderboard</a></li>
            <li><a href="/procedure">Expense Stats</a></li>      
            <li><a href="/homepage">Logout</a></li>       
        </ul>
    </div>
    <div class="main-content">
        <div class="container">
            <!-- Form to Save Monthly Plan -->
            <form class="budgetForm" action="/savemonthlyplan" method="POST">
                <h2>Setup your Monthly Plan</h2>
                <div class="input-group">
                    <label for="username">Enter your Username</label>
                    <input type="text" id="username" name="username" placeholder="Username" required>
                </div>
                <div class="input-group">
                    <label for="monthly-goal">Monthly Goal</label>
                    <input type="number" id="savings-goal" name="savings" placeholder="Percentage Saved" required>
                    <input type="number" id="needs-goal" name="needs" placeholder="Percentage Spent on Needs" required>
                    <input type="number" id="wants-goal" name="wants" placeholder="Percentage Spent on Wants" required>
                </div>
                <div class="input-group">
                    <label for="complete-by">Complete By</label>
                    <input type="date" id="complete-by" name="complete-by" placeholder="Date" required>
                </div>
                <div class="button-group">
                    <button type="submit" class="save-btn">Save</button>
                </div>
            </form>

            <!-- Form to Delete Monthly Plan -->
            <form class="deleteForm" action="/deletemonthlyplan" method="POST">
                <h2>Delete your Monthly Plan</h2>
                <div class="input-group">
                    <label for="username-delete">Enter your Username</label>
                    <input type="text" id="username-delete" name="username" placeholder="Username" required>
                </div>
                <div class="button-group">
                    <button type="submit" class="delete-btn">Delete</button>
                </div>
            </form>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const headerTitle = document.querySelector('.header-title');

            headerTitle.addEventListener('mouseenter', function() {
                headerTitle.classList.add('bounce');
            });

            headerTitle.addEventListener('animationend', function() {
                headerTitle.classList.remove('bounce');
            });
        });
    </script>
</body>
</html>
